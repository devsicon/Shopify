
{% comment %}
Creat a dynamic section for slider bannar with block and display images. Also count the total blocks and empliment it into "carousel-indicators"
{% endcomment %}

    <ol class="carousel-indicators">
        {% for block in section.blocks limit: section.blocks.size %}
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class=""></li>
        {% endfor %}
    </ol>
    
    <div class="carousel-inner">
        {% for block in section.blocks %}
      <div class="carousel-item">
        <img class="d-block w-100" src="{{ block.settings.slider | img_url: '1920x'}}">
      </div>
      {% endfor %}
    </div>


  {% schema %}
  {
      "name": "Slider Bannar",
      "blocks":[
      {
        "type": "select",
        "name": "Image Slider",
        "settings":[
        {
            "type": "image_picker",
            "id": "slider",
            "label": "Slider Image"
        }
        ]
      }
      ],
      "presets":[
        {
            "name": "Slider Banner",
            "category": "Sliddr"
        }
      ]
  }
  {% endschema %}
